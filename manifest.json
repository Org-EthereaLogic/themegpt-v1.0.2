{
  "manifest_version": 3,
  "name": "ThemeGPT \u2014 ChatGPT Theme Changer",
  "version": "1.0.2",
  "description": "Customize ChatGPT with friendly themes. No tracking.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "ThemeGPT",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": [
        "contentScript.js"
      ],
      "css": [
        "themes.css"
      ],
      "run_at": "document_idle"
    }
  ]
}